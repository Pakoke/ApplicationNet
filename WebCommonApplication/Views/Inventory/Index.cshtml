@model Inventory.Dtos.Vehicle
@{
    int pagesize = 10;
    int pageactual = 0;
    int numberOfpages = ViewBag.ListOfVehicle.Count / pagesize;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>
        <br>@ViewBag.Title<br/>
    </title>
</head>
<body>
    <div>
        <table name="table-vehicle" class="table table-hover">
            <caption>List of Vehicles</caption>
            <tbody style="text-align-last:center">
                <tr>
                    <th>Make by</th>
                    <th>Model</th>
                    <th>Year</th>
                </tr>
                @foreach (Inventory.Dtos.Vehicle v in ViewBag.ListOfVehicle)
                {
                    <tr>
                        @using (Html.BeginForm("RemoveFromTheList", "Inventory", FormMethod.Post, new { encType = "multipart/form-data", id = "myform", name = "myform" }))
                        {
                            <th>@v.Make</th>
                            <th>@v.Model</th>
                            <th>@v.Year</th>
                            <th>
                                <button type="button" class="btn btn-default" aria-label="Center Align">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                </button>
                            </th>
                            <th>
                                <button type="button" class="btn btn-default" aria-label="Center Align">
                                    <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
                                </button>
                            </th>
                        }
                        
                    </tr>
                }
            </tbody>
        </table>
        <div name="" class="table table-footer">
            <div class="div-add">
                <button type="button" class="btn btn-default btn-add" aria-label="Right Align">
                    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>  Add
                </button>
            </div>
            <div class="div-pages">
                <label class="text pages text-pages" style="text-align-last:center">@pageactual.ToString()/@numberOfpages.ToString()</label>
            </div>
        </div>
    </div>

